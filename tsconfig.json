{
	"compilerOptions": {
		"strict": true,
		"module": "ES2020",
		"target": "ES2020",
		"moduleResolution": "Node",
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"types": [
			"vite/client"
		],
		"jsx": "react",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./*"
			]
		}
	},
	"ts-node": {
		"transpileOnly": true,
		"esm": true,
		"compilerOptions": {
			"module": "NodeNext",
			"moduleResolution": "NodeNext"
		}
	}
}