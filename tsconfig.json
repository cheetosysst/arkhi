{
	"compilerOptions": {
		"strict": true,
		"module": "ES2022",
		"target": "ES2020",
		"moduleResolution": "Node",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"types": ["vite/client"],
		"jsx": "react",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"paths": {
			"@/*": ["./*"]
		}
	},
	"ts-node": {
		"transpileOnly": true,
		"esm": true,
		"compilerOptions": {
			"moduleResolution": "Node16"
		}
	}
}
