{
	"compilerOptions": {
		"strict": true,
		"module": "CommonJS",
		"target": "ESNext",
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "Node",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"types": ["vite/client"],
		"jsx": "react",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"declaration": true,
		"declarationMap": true,
		"baseUrl": ".",
		"paths": {
			"arkhi/client": ["client/index"],
			"arkhi/server": ["server/index"],
			"arkhi/plugins": ["plugins/index"]
		},
		"outDir": "dist"
	},
	"include": ["./client", "./server", "./plugins"],
	"exclude": ["node_modules"]
}
