{
	"compilerOptions": {
		"strict": true,
		"module": "ES2020",
		"target": "ES2020",
		"moduleResolution": "Node",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"types": ["vite/client"],
		"jsx": "react",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"declaration": true,
		"baseUrl": ".",
		"paths": {
			"arkhi/client": ["client/index"],
			"arkhi/server": ["server/index"],
			"arkhi/plugins": ["plugins/index"]
		},
		"outDir": "dist"
	},
	"include": ["./client/index.tsx", "./server/index.ts", "./plugins/index.ts"]
}
